---
import { SITE_DESCRIPTION, SITE_LINKS, SITE_TITLE } from "../config";
import "../styles/unreset.scss";
---

<header class="blur py-5 w-full backdrop-blur b-b-1 dark:border-gray-6 fixed z-255 sticky top-0">
  <div class=" container mx-auto flex justify-between xl:max-w-[980px]">
    <h2 class="z-250 xl:ml-0 ml-10 text-left font-bold text-xl">
      {SITE_TITLE}
  </h2>
  <input type="checkbox" class="sm:hidden z-250" id="drawer-toggle" name="drawer-toggle"/>
  <label for="drawer-toggle" class="sm:hidden z-250" id="drawer-toggle-label"></label>
  <nav class="z-170 sm:flex sm:relative sm:mt-0 mt--130 absolute items-center text-center sm:w-auto w-full justify-around  transition-all duration-500" id="nav">
    {
      SITE_LINKS.map((item) => (
        <a href={item.link} class="text-[#191B1D] dark:text-[#abb2bf] mx-2 font-100">
          <!-- <img src={item.icon} alt="item.name" width="20" height="20" /> -->
          <p>{item.name}</p>
          </a>
          ))
        }
  </nav>
</div>
</header>
<style>

  .blur{
    backdrop-filter: blur(4px);
  }
  #drawer-toggle::before:checked{
    transform: rotate(45deg);
  }
  #drawer-toggle:checked ~ #nav{
    margin-top: 0;
    margin: 80px auto;
    height: 70vh;
    background-color: var(--bg-color);
    /* backdrop-filter: blur(4px); */
    z-index: 255;
  }
  
#drawer-toggle-label::before { 
content: ''; 
display: block; 
height: 2px; 
width: 24px; 
background: #8d8d8d; 
box-shadow: 0 6px 0 #8d8d8d, 0 12px 0 #8d8d8d; 
} 
#drawer-toggle-label { 
  margin-top: 22px;
user-select: none; 
left: 0px; 
height:20px; 
width: 50px; 
background: rgba(255,255,255,.0); 
z-index: 1; 
} 
#drawer-toggle { 
opacity: 0; 
}
</style>
