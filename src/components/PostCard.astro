---
export interface Props {
  time: string;
  title: string;
  url: string;
}

const { time, title, url } = Astro.props;
---

<li
  class="list-outside text-dark min-w-90 bg-whitesmoke m-2 border-1 dark:border-gray-6 border-gray-2 p-5 rounded-xl h-40 list-none"
>
  <a href={url} class="text-black dark:text-[#abb2bf]">
    <h1 class="font-bold">
      {title}
    </h1>
    {new Date(time).toLocaleString()}
  </a>
</li>
